<div class="card card-body">
  <h4 class="letter-spacing mb-3 text-center">Filtration</h4>
  <%- include('../../../partials/inputSelect', { label: 'Sort by', name: 'sort',
    options: [
      { label: 'Date', value: 'start'},  
      { label: 'Price', value: 'price'},  
      { label: 'Hotel standard', value: 'hotelStandard'},  
    ],
  }) %>
  <%- include('../../../partials/inputCheckbox', { label: 'Food', name: 'food',
    options: [
    { label: 'All inclusive', value: 'All-inclusive'},  
    { label: 'Breakfast and dinner', value: 'Breakfast-and-diner'},  
    { label: 'Breakfast', value: 'Breakfast'},  
    { label: 'Three meals', value: 'Three-meals'},  
    ],
  }) %>
  <%- include('../../../partials/inputRadio', { label: 'Hotel standard', name: 'hotelStandard',
    options: [
    { label: 'Any', value: ''},  
    { label: '5*', value: '5'},  
    { label: '4*', value: '4'},  
    { label: '3*', value: '3'},  
    { label: '2*', value: '2'},  
    ],
  }) %>
  <div class="mb-3">
    <h6>Price per person</h6>
    <div class="row">
      <div class="col-12 mb-2 col-sm-6">
        <%- include('../../../partials/inputGroup', { name: 'priceMin', placeholder: 'max', min: 0 }) %>
      </div>
      <div class="col-12 mb-2 col-sm-6">
        <%- include('../../../partials/inputGroup', { name: 'priceMax', placeholder: 'min', min: 0 }) %>
      </div>
    </div>
  </div>
  <%- include('../../../partials/inputSelect', { label: 'Length of stay', name: 'days',
    options: [
      { label: 'Any', value: ''},
      { label: '1-6 days', value: '1-6'},  
      { label: '7-10 days', value: '7-10'},  
      { label: '11-15 days', value: '11-15'},  
    ],
  }) %>
  <%- include('../../../partials/inputSelect', { label: 'Mean of transport', name: 'transport',
    options: [
      { label: 'Any', value: ''},
      { label: 'Plane', value: 'Plane'},  
      { label: 'Bus', value: 'Bus'},  
      { label: 'Own', value: 'Own'},  
    ],
  }) %>
  <%- include('../../../partials/inputRadio', { label: 'Rating', name: 'rating',
    options: [
      { label: 'Any', value: ''},  
      { label: '9+', value: '9'},  
      { label: '8+', value: '8'},  
      { label: '7+', value: '7'},  
      { label: '6+', value: '6'},  
    ],
  }) %>
  <%- include('../../../partials/inputCheckbox', { label: 'Popular', name: 'popular',
    options: [
      { label: 'Last minute', value: 'Last-minute'},  
      { label: 'Winter 2023', value: 'Winter2023'},  
      { label: 'Summer 2024', value: 'Summer2024'},  
      { label: 'Poland 2024', value: 'Poland2024'},  
    ],
  }) %>
  <button class="btn btn-primary w-100 mt-3">Search offer</button>
</div>