<div class="container-fluid my-4">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center">Admin panel</h2>
    </div>
    <div class="card-body table-responsive">
      <h3>List of trips</h3>
      <table class="table table-striped my-4 text-center">
        <thead>
          <tr>
            <td>Country</td>
            <td>Region</td>
            <td>City</td>
            <td>Hotel name</td>
            <td>Hotel stars</td>
            <td>Start</td>
            <td>End</td>
            <td>From</td>
            <td>Food</td>
            <td>Transport</td>
            <td>Popular</td>
            <td>Places</td>
            <td>Price(â‚¬)</td>
            <td>Image</td>
          </tr>
        </thead>
        <tbody>
          <% trips.forEach(trip => { %>
            <tr>
              <td><%= trip.country %></td>
              <td><%= trip.region %></td>
              <td><%= trip.city %></td>
              <td><%= trip.hotelName %></td>
              <td><%= trip.hotelStandard %></td>
              <td><%= trip.start %></td>
              <td><%= trip.end %></td>
              <td><%= trip.from %></td>
              <td><%= trip.food %></td>
              <td><%= trip.transport %></td>
              <td><%= trip.popular %></td>
              <td><%= trip.places %></td>
              <td><%= trip.price %></td>
              <td><%= trip.image ? 'yes' : 'no' %></td>
              <td><a href="/admin/edit-trip/<%= trip._id %>" class="btn btn-warning">Edit</a></td>
              <td><a href="/admin/delete-trip/<%= trip._id %>" class="btn btn-danger" onclick="return alert('Are you sure you want to delete this trip?')">Delete</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/admin/add-trip" class="btn btn-primary px-3 py-2">Add trip</a>
    </div>
  </div>
</div>