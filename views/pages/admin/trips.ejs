<div class="container-fluid my-4">
  <div class="card">
    <div class="card-header row align-items-center">
      <div class="col-8">
        <h2 class="text-start">Admin panel</h2>
      </div>
      <div class="col-4 text-end">
        <a href="/admin/logout" class="btn btn-primary">Log out admin</a>
      </div>
    </div>
    <div class="card-body table-responsive">
      <h3>List of trips</h3>
      <table class="table table-striped my-4 text-center">
        <thead>
          <tr>
            <td>Country</td>
            <td>Region</td>
            <td>City</td>
            <td>Hotel name</td>
            <td>Hotel stars</td>
            <td>Start</td>
            <td>End</td>
            <td>From</td>
            <td>Price(â‚¬)</td>
          </tr>
        </thead>
        <tbody>
          <% trips.forEach(trip => { %>
            <tr>
              <td><%= trip.country %></td>
              <td><%= trip.region %></td>
              <td><%= trip.city %></td>
              <td><%= trip.hotelName %></td>
              <td><%= trip.hotelStandard %></td>
              <td><%= trip.start.toISOString().slice(0, 10) %></td>
              <td><%= trip.end.toISOString().slice(0, 10)  %></td>
              <td><%= trip.from %></td>
              <td><%= trip.price %></td>
              <td><a href="/admin/edit-trip/<%= trip._id %>" class="btn btn-warning">Edit</a></td>
              <td><a href="/admin/delete-trip/<%= trip._id %>" class="btn btn-danger" onclick="return alert('Are you sure you want to delete this trip?')">Delete</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/admin/add-trip" class="btn btn-primary px-3 py-2">Add trip</a>
    </div>
  </div>
</div>