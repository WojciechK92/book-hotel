<div class="mb-3">
  <label for="<%= name %>" class="form-label"><%= label %></label>
  <select class="form-control <%= errors?.[name] ? 'is-invalid' : '' %>" name="<%= name %>">
    <% options.forEach(option => { %>
      <option 
        value="<%= option.value %>"
        <%- form[name] === option.value ? 'selected' : '' %>
      >
        <%= option.label %>
      </option>
    <% }) %>
  </select>
  <% if (errors?.[name]) { %>
    <div class="invalid-feedback mt-2"><%= errors?.[name].message %></div>
  <% } %>
</div>